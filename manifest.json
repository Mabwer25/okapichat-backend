  "shortcuts": [
    {
      "name": "Nouveau Post",
      "short_name": "Publier",
      "description": "Créer un nouveau post",
      "url": "/?action=new-post",
      "icons": [
        {
          "src": "images/shortcut-post.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Messages",
      "short_name": "Chat",
      "description": "Voir les messages",
      "url": "/?action=messages",
      "icons": [
        {
          "src": "images/shortcut-chat.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Profil",
      "short_name": "Profil",
      "description": "Mon profil",
      "url": "/?action=profile",
      "icons": [
        {
          "src": "images/shortcut-profile.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "image",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "okapichat",
      "url": "/?chat=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp"],
        "video/*": [".mp4", ".webm"],
        "audio/*": [".mp3", ".wav", ".ogg"]
      }
    }
  ],
  "permissions": [
    "camera",
    "microphone",
    "geolocation",
    "notifications",
    "persistent-storage"
  ],
  "features": [
    "cross-origin-isolated"
  ],
  "related_applications": [
    {
      "platform": "play",
