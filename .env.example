# Variables d'environnement pour OkapiChat Backend
# Copiez ce fichier vers .env et configurez vos valeurs

# Configuration environnement
ENVIRONMENT=development
PORT=8000
DEBUG=true

# Sécurité JWT
JWT_SECRET=okapichat-jwt-secret-key-rdc-2025-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Configuration Supabase
SUPABASE_URL=https://xzjqpdnkxiizskqnckox.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_KEY=your-supabase-service-key-here

# Configuration CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://okapichat-rdc.netlify.app

# Configuration uploads
MAX_UPLOAD_SIZE=5242880  # 5MB
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# Configuration Redis (optionnel)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Configuration PostgreSQL (si pas Supabase)
DATABASE_URL=postgresql://user:password@localhost:5432/okapichat
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Configuration logging
LOG_LEVEL=info
LOG_FORMAT=json
SENTRY_DSN=

# Configuration emails/notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=notifications@okapichat.com
SMTP_PASSWORD=
EMAIL_FROM=OkapiChat <noreply@okapichat.com>

# Firebase Cloud Messaging (notifications push)
FCM_SERVER_KEY=
FCM_SENDER_ID=

# Configuration analytics
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Configuration AWS S3 (si stockage cloud)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=okapichat-media
AWS_REGION=eu-west-1

# Configuration Cloudinary (alternative images)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Configuration rate limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# Configuration cache
CACHE_TTL=3600
CACHE_PREFIX=okapichat:

# Configuration monitoring
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true

# Configuration spécifique RDC
DEFAULT_TIMEZONE=Africa/Kinshasa
DEFAULT_LANGUAGE=fr
SUPPORTED_LANGUAGES=fr,ln,kg,sw,lu

# URLs de callback
FRONTEND_URL=https://okapichat-rdc.netlify.app
CALLBACK_SUCCESS_URL=/auth/success
CALLBACK_ERROR_URL=/auth/error

# Configuration développement
RELOAD_ON_CHANGE=true
SHOW_DOCS=true
SHOW_REDOC=true